<div class="tab-pane fade active in" id="param-pills">
    <br />
	<form method="get" id="parametresForm">
    <div class="notice-board">
        <div class="dropdown">
            <label>Mode de restriction de la zone de travail</label>
            <button class="btn btn-success dropdown-toggle btn-xs" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-expanded="true">
                <i class="fa fa-question" ></i>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2" role="presentation">
                &nbsp;Plein de texte explicatif.
            </div>
        </div>

        <div class="radio">
            <label>
                <input type="radio" name="optionsRadios" id="mask2D" value="22D" disabled />
